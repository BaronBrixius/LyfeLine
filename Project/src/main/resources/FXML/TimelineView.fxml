<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="mainBorderPane" prefHeight="900.0" prefWidth="1580.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TimelineView">
    <fx:define>
        <fx:include fx:id="eventSelector" source="EventSelector.fxml" />
        <fx:include fx:id="eventEditor" source="EventEditor.fxml" />
        <fx:include fx:id="timelineEditor" source="TimelineEditor.fxml" />
    </fx:define>
    <bottom>
        <HBox id="HBox" alignment="CENTER_LEFT" fillHeight="false" maxHeight="50.0" spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            <Button fx:id="backButton" alignment="CENTER" mnemonicParsing="false" onAction="#returnToDashboard" styleClass="smallButton" text="Back" HBox.hgrow="NEVER" />
            <Pane maxWidth="40.0" HBox.hgrow="NEVER" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#openEventSelector" styleClass="smallButton" text="Events" HBox.hgrow="NEVER" />
        </HBox>
    </bottom>
    <left>
        <StackPane fx:id="leftSidebar" BorderPane.alignment="CENTER" />
    </left>
    <center>
        <ScrollPane fx:id="mainScrollPane" fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" styleClass="scroll-bar" BorderPane.alignment="CENTER">
         <content>
            <StackPane fx:id="stackFoo">
               <children>
                  <Group>
                     <children>
                            <GridPane fx:id="timelineGrid" alignment="CENTER" centerShape="true" gridLinesVisible="true" minHeight="300.0" minWidth="500.0" scaleShape="false" vgap="27.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="25.0" vgrow="NEVER" />
                                    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
                                    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
                                    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
                                    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
                                    <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="NEVER" />
                                </rowConstraints>
                                <opaqueInsets>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                </opaqueInsets>
                            </GridPane>
                     </children>
                  </Group>
               </children>
            </StackPane>
         </content>
        </ScrollPane>
    </center>
    <right>
        <StackPane fx:id="rightSidebar" BorderPane.alignment="CENTER" />
    </right>
</BorderPane>
