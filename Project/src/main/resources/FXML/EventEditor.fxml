<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<ScrollPane fx:id="editor" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventEditor">
    <GridPane alignment="CENTER_RIGHT" hgap="5" maxHeight="1.7976931348623157E308" prefWidth="325.0" vgap="5">
        <columnConstraints>
            <ColumnConstraints prefWidth="150" />
            <ColumnConstraints prefWidth="150" />
        </columnConstraints>
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Label fx:id="headerText" styleClass="headertext" GridPane.columnSpan="2" />
        <Label styleClass="smallText" text="Title" GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.valignment="BOTTOM" />
        <TextField fx:id="titleInput" GridPane.columnSpan="2" GridPane.rowIndex="3" />
        <Label styleClass="smallText" text="Description" GridPane.columnSpan="2" GridPane.rowIndex="4" GridPane.valignment="BOTTOM" />
        <TextArea fx:id="descriptionInput" maxHeight="1.7976931348623157E308" prefHeight="300.0" styleClass="smallText" wrapText="true" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.vgrow="ALWAYS" />
        <Label styleClass="smallText" text="Start:" GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.valignment="BOTTOM" />
        <FlowPane fx:id="startPane" alignment="CENTER_LEFT" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
            <Button alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" onAction="#toggleStartExpanded" styleClass="tinyButton" text="more..." textAlignment="CENTER">
                <FlowPane.margin>
                    <Insets left="7.0" top="18.0" />
                </FlowPane.margin>
            </Button>
        </FlowPane>
        <HBox alignment="BOTTOM_LEFT" spacing="5.0" GridPane.rowIndex="8" GridPane.valignment="BOTTOM">
            <CheckBox fx:id="hasDuration" onAction="#toggleHasDuration" />
            <Label contentDisplay="RIGHT" styleClass="smallText" text="End" />
        </HBox>
        <FlowPane fx:id="endPane" alignment="CENTER_LEFT" disable="true" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="9">
            <Button alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" onAction="#toggleEndExpanded" styleClass="tinyButton" text="more..." textAlignment="CENTER">
                <FlowPane.margin>
                    <Insets left="7.0" top="18.0" />
                </FlowPane.margin>
            </Button>
        </FlowPane>
        <Button fx:id="uploadImageButton" alignment="CENTER" onAction="#uploadImage" prefWidth="80.0" styleClass="tinyButton" text="Upload img" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="deleteImageButton" alignment="CENTER" onAction="#clearImage" prefWidth="80.0" styleClass="tinyButton" text="Delete img" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </Button>
        <Button fx:id="saveEditButton" alignment="CENTER" maxHeight="30" onAction="#saveEditButton" styleClass="smallButton" text="Save" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="14" />
        <Button fx:id="deleteButton" alignment="CENTER" maxHeight="30" onAction="#deleteEvent" styleClass="smallButton" text="Delete" GridPane.halignment="CENTER" GridPane.rowIndex="15" />
        <Button alignment="CENTER" maxHeight="30" onAction="#close" styleClass="smallButton" text="Close" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="15" />
        <Text fx:id="errorMessage" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" GridPane.columnSpan="2" GridPane.rowIndex="13" />
        <ImageView fx:id="image" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</ScrollPane>
