<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
      prefWidth="350.0" spacing="5.0" stylesheets="@../DefaultStyle.css" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="EventEditor_GUI">
    <opaqueInsets>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </opaqueInsets>
    <padding>
        <Insets bottom="5.0" left="10.0" right="10.0" top="25.0"/>
    </padding>
    <Label prefHeight="39.0" prefWidth="350.0" text="New Event">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <Label text="Title"/>
    <TextField/>
    <Label text="Description"/>
    <TextArea prefHeight="200.0" prefWidth="200.0"/>
    <Label text="Start"/>
    <DatePicker/>
    <HBox prefHeight="9.0" prefWidth="350.0" spacing="5.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <CheckBox mnemonicParsing="false"/>
        <Label text="End"/>
    </HBox>
    <DatePicker/>
    <GridPane alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#saveEvent" styleClass="smallButton" text="Save"/>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#deleteEvent" styleClass="smallButton" text="Delete"
                GridPane.rowIndex="1"/>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#close" styleClass="smallButton" text="Close"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
</VBox>
