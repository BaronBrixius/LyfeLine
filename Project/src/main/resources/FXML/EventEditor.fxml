<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="CENTER_RIGHT" hgap="5" vgap="5"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EventEditor_GUI">
    <columnConstraints>
        <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150"/>
        <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150"/>
    </columnConstraints>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
    <Label styleClass="headertext" text="New Event" GridPane.columnSpan="2"/>
    <Label text="Title" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.valignment="BOTTOM"/>
    <TextField GridPane.columnSpan="2" GridPane.rowIndex="2" fx:id="titleInput"/>
    <Label text="Description" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.valignment="BOTTOM"/>
    <TextArea GridPane.columnSpan="2" GridPane.rowIndex="4" fx:id="descriptionInput"/>
    <Label text="Start" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.valignment="BOTTOM"/>
    <DatePicker GridPane.columnSpan="2" GridPane.rowIndex="6" fx:id="startInput"/>
    <HBox alignment="BOTTOM_LEFT" spacing="5.0" GridPane.rowIndex="7" GridPane.valignment="BOTTOM">
        <CheckBox onAction="#toggleHasDuration" fx:id="hasDuration"/>
        <Label contentDisplay="RIGHT" text="End"/>
    </HBox>
    <DatePicker GridPane.columnSpan="2" GridPane.rowIndex="8" disable="true" fx:id="endInput"/>
    <Label text="Image" GridPane.columnSpan="2" GridPane.rowIndex="9" GridPane.valignment="BOTTOM"/>
    <Button alignment="CENTER" onAction="#uploadImage" styleClass="tinyButton" text="Upload img"
            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="10"/>
    <ComboBox prefWidth="175.0" GridPane.columnSpan="2" GridPane.rowIndex="10" fx:id="imageInput"/>
    <Region prefHeight="30" GridPane.rowIndex="11" GridPane.vgrow="ALWAYS"/>
    <Button alignment="CENTER" onAction="#saveEvent" styleClass="smallButton" text="Save" GridPane.rowIndex="12"
            maxHeight="30"/>
    <Button alignment="CENTER" onAction="#deleteEvent" styleClass="smallButton" text="Delete" GridPane.rowIndex="13"
            maxHeight="30"/>
    <Button alignment="CENTER" onAction="#close" styleClass="smallButton" text="Close" GridPane.columnIndex="1"
            GridPane.rowIndex="13" maxHeight="30"/>
</GridPane>
