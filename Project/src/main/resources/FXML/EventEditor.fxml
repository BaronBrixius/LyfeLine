<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<GridPane fx:id="editor" alignment="CENTER_RIGHT" hgap="5" maxHeight="1.7976931348623157E308" prefWidth="325.0" vgap="5" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EventEditor">
    <columnConstraints>
        <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150" />
        <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150" />
    </columnConstraints>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label fx:id="headerText" styleClass="headertext" GridPane.columnSpan="2" />
    <Label styleClass="smallText" text="Title" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
    <TextField fx:id="titleInput" GridPane.columnSpan="2" GridPane.rowIndex="2" />
    <Label styleClass="smallText" text="Description" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
    <TextArea fx:id="descriptionInput" maxHeight="1.7976931348623157E308" styleClass="smallText" wrapText="true" GridPane.columnSpan="2" GridPane.rowIndex="4" GridPane.vgrow="ALWAYS" />
    <Label styleClass="smallText" text="Start:" GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.valignment="BOTTOM" />
    <FlowPane fx:id="startTime" alignment="CENTER_LEFT" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <children>
            <VBox fx:id="startYearBox" alignment="CENTER_LEFT" fillWidth="false" prefWidth="70.0">
                <children>
                    <Label styleClass="smallText" text="Year" />
                    <Spinner fx:id="startYearInput" />
                </children>
            </VBox>
            <VBox fx:id="startMonthBox" fillWidth="false" prefWidth="70.0">
                <children>
                    <Label styleClass="smallText" text="Month" />
                    <Spinner fx:id="startMonthInput" />
                </children>
            </VBox>
            <VBox fx:id="startDayBox" fillWidth="false" prefWidth="70.0">
                <children>
                    <Label styleClass="smallText" text="Day" />
                    <Spinner fx:id="startDayInput" />
                </children>
            </VBox>
            <VBox fx:id="startHourBox" fillWidth="false" prefWidth="70.0">
                <children>
                    <Label styleClass="smallText" text="Hour" />
                    <Spinner fx:id="startHourInput" />
                </children>
            </VBox>
            <VBox fx:id="startMinuteBox" fillWidth="false" prefWidth="70.0">
                <children>
                    <Label styleClass="smallText" text="Minute" />
                    <Spinner fx:id="startMinuteInput" />
                </children>
            </VBox>
            <VBox fx:id="startSecondBox" fillWidth="false" prefWidth="70.0">
                <children>
                    <Label styleClass="smallText" text="Second" />
                    <Spinner fx:id="startSecondInput" />
                </children>
            </VBox>
            <VBox fx:id="startMillisecondBox" fillWidth="false" prefWidth="70.0">
                <children>
                    <Label styleClass="smallText" text="Millisecond" />
                    <Spinner fx:id="startMillisecondInput" />
                </children>
            </VBox>
            <Button alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" styleClass="tinyButton" text="more..." textAlignment="CENTER">
                <FlowPane.margin>
                    <Insets left="7.0" top="18.0" />
                </FlowPane.margin>
            </Button>
        </children>
    </FlowPane>
    <HBox alignment="BOTTOM_LEFT" spacing="5.0" GridPane.rowIndex="7" GridPane.valignment="BOTTOM">
        <CheckBox fx:id="hasDuration" onAction="#toggleHasDuration" />
        <Label contentDisplay="RIGHT" styleClass="smallText" text="End" />
    </HBox>
    <FlowPane fx:id="endTime" alignment="CENTER_LEFT" disable="true" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="8">
        <children>
            <Button alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" styleClass="tinyButton" text="more..." textAlignment="CENTER">
                <FlowPane.margin>
                    <Insets left="7.0" top="18.0" />
                </FlowPane.margin>
            </Button>
        </children>
    </FlowPane>
    <Label styleClass="smallText" text="Image" GridPane.columnSpan="2" GridPane.rowIndex="9" GridPane.valignment="BOTTOM" />
    <Button fx:id="uploadButton" alignment="CENTER" onAction="#uploadImage" styleClass="tinyButton" text="Upload img" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="10" />
    <ComboBox fx:id="imageInput" prefHeight="40.0" prefWidth="175.0" GridPane.columnSpan="2" GridPane.rowIndex="10" GridPane.rowSpan="2" />
    <Region prefHeight="30" GridPane.rowIndex="11" />
    <Button fx:id="editButton" alignment="CENTER" maxHeight="30" onAction="#saveEditButton" styleClass="smallButton" text="Save" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="13" />
    <Button fx:id="deleteButton" alignment="CENTER" maxHeight="30" onAction="#deleteEvent" styleClass="smallButton" text="Delete" GridPane.halignment="CENTER" GridPane.rowIndex="14" />
    <Button alignment="CENTER" maxHeight="30" onAction="#close" styleClass="smallButton" text="Close" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="14" />
    <Text fx:id="errorMessage" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" GridPane.columnSpan="2" GridPane.rowIndex="12" />
    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.rowIndex="11" />
    <Button alignment="CENTER" maxHeight="30" onAction="#addToTimeline" styleClass="smallButton" text="Add to Timeline" GridPane.halignment="CENTER" GridPane.rowIndex="13" />
    <stylesheets>
        <URL value="@../styles/Sidebar.css" />
        <URL value="@../styles/DefaultStyle.css" />
    </stylesheets>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
