<GridPane alignment="CENTER_RIGHT" hgap="5" prefHeight="572.0" prefWidth="325.0" stylesheets="@../styles/DefaultStyle.css" vgap="5" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EventSelector">
    <columnConstraints>
        <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150" />
        <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150" />
    </columnConstraints>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label styleClass="headertext" text="Event List" GridPane.columnSpan="2" />
    <Label text="Timeline" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
   <ComboBox fx:id="timelineList" prefWidth="150.0" GridPane.rowIndex="2" />
    <Label text="Events" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
   <ListView fx:id="eventList" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="4" />
   <Button alignment="CENTER" maxHeight="30" onAction="#newEvent" styleClass="smallButton" text="New Event" GridPane.rowIndex="6" />
    <Button fx:id="viewButton" alignment="CENTER" disable="true" maxHeight="30" onAction="#openEvent" styleClass="smallButton" text="View Event" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <Region prefHeight="30.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" />
    <Button alignment="CENTER" maxHeight="30" onAction="#close" styleClass="smallButton" text="Close" GridPane.columnIndex="1" GridPane.rowIndex="7" />
   <Button alignment="CENTER" maxHeight="30" onAction="#deleteEvent" styleClass="smallButton" text="Delete" GridPane.rowIndex="7" />
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
