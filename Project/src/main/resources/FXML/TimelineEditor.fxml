<GridPane fx:id="editor" alignment="CENTER_RIGHT" hgap="5" maxHeight="1.7976931348623157E308" prefWidth="325.0" vgap="5" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TimelineEditor">
    <columnConstraints>
        <ColumnConstraints prefWidth="150" />
        <ColumnConstraints prefWidth="150" />
    </columnConstraints>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <Label fx:id="headerText" styleClass="headertext" GridPane.columnSpan="2" />
    <Label text="Title" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
    <TextField fx:id="titleInput" GridPane.columnSpan="2" GridPane.rowIndex="2" />
    <Label text="Description" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
    <TextArea fx:id="descriptionInput" maxHeight="1.7976931348623157E308" prefHeight="300.0" prefWidth="305.0" styleClass="smallText" wrapText="true" GridPane.columnSpan="2" GridPane.rowIndex="4" GridPane.vgrow="SOMETIMES" />
    <Label styleClass="smallText" text="Start:" GridPane.columnSpan="2" GridPane.rowIndex="8" GridPane.valignment="BOTTOM" />
    <FlowPane fx:id="startPane" alignment="CENTER_LEFT" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="9">
        <Button fx:id="moreStart" alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" onAction="#toggleStartExpanded" styleClass="tinyButton" text="more..." textAlignment="CENTER">
            <FlowPane.margin>
                <Insets left="7.0" top="18.0" />
            </FlowPane.margin>
        </Button>
    </FlowPane>
    <HBox alignment="BOTTOM_LEFT" spacing="5.0" GridPane.rowIndex="10" GridPane.valignment="BOTTOM">
        <Label contentDisplay="RIGHT" styleClass="smallText" text="End" />
    </HBox>
    <FlowPane fx:id="endPane" alignment="CENTER_LEFT" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="11">
        <Button fx:id="moreEnd" alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" onAction="#toggleEndExpanded" styleClass="tinyButton" text="more..." textAlignment="CENTER">
            <FlowPane.margin>
                <Insets left="7.0" top="18.0" />
            </FlowPane.margin>
        </Button>
    </FlowPane>
    <Region prefHeight="30" GridPane.rowIndex="14" />
    <Button fx:id="editButton" alignment="CENTER" maxHeight="30" onAction="#saveEditButton" styleClass="smallButton" text="Edit" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="17" />
    <Button fx:id="deleteButton" alignment="CENTER" maxHeight="30" onAction="#deleteTimeline" styleClass="smallButton" text="Delete" GridPane.halignment="CENTER" GridPane.rowIndex="17" />
    <Text fx:id="errorMessage" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" GridPane.columnSpan="2" GridPane.rowIndex="15" />
   <Label text="Key Words" GridPane.rowIndex="5" />
    <HBox fx:id="keyWordBox" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <TextField fx:id="keywordInput" HBox.hgrow="ALWAYS" />
        <Region prefHeight="5.0" prefWidth="5.0" />
        <Button fx:id="addKeyWord" maxWidth="47.0" mnemonicParsing="false" onAction="#addKeyword" prefWidth="47.0" styleClass="tinyButton" text="Add">
           <font>
               <Font size="10.0" />
           </font>
        </Button>
        <Region prefHeight="5.0" prefWidth="5.0" />
        <Button fx:id="removeButton" maxWidth="67.0" mnemonicParsing="false" onAction="#removeKeyword" prefWidth="67.0" styleClass="tinyButton" text="Remove">
           <font>
               <Font size="10.0" />
           </font>
        </Button>
    </HBox>
   <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="7" GridPane.vgrow="SOMETIMES" />
   <Text fx:id="feedbackText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
