<HBox fx:id="editor" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.TimelineEditor">
   <children>
      <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <GridPane fx:id="inputFields" alignment="CENTER_RIGHT" hgap="5" maxHeight="1.7976931348623157E308" vgap="5" VBox.vgrow="SOMETIMES">
               <columnConstraints>
                  <ColumnConstraints prefWidth="150" />
                  <ColumnConstraints prefWidth="150" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints prefHeight="30.0" />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
               <children>
                  <Label styleClass="smallText" text="Title" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
                  <TextField fx:id="titleInput" GridPane.columnSpan="2" GridPane.rowIndex="2" />
                  <Label styleClass="smallText" text="Description" GridPane.columnSpan="2" GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
                  <TextArea fx:id="descriptionInput" maxHeight="1.7976931348623157E308" prefHeight="300.0" prefWidth="305.0" styleClass="smallText" wrapText="true" GridPane.columnSpan="2" GridPane.rowIndex="4" GridPane.vgrow="SOMETIMES" />
                  <Label styleClass="smallText" text="Key Words" GridPane.rowIndex="5" GridPane.valignment="BOTTOM" />
                  <Text fx:id="feedbackText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <HBox spacing="5.0" GridPane.columnSpan="2" GridPane.rowIndex="6">
                     <children>
                        <TextField fx:id="keywordInput" HBox.hgrow="SOMETIMES" />
                        <Button fx:id="addKeywordButton" maxWidth="47.0" mnemonicParsing="false" onAction="#addKeyword" prefWidth="47.0" text="Add">
                           <font>
                              <Font size="10.0" />
                           </font>
                           <styleClass>
                              <String fx:value="tinyButton" />
                              <String fx:value="DisabledInvisible" />
                           </styleClass>
                        </Button>
                        <Button fx:id="removeKeywordButton" maxWidth="67.0" mnemonicParsing="false" onAction="#removeKeyword" prefWidth="67.0" text="Remove">
                           <font>
                              <Font size="10.0" />
                           </font>
                           <styleClass>
                              <String fx:value="tinyButton" />
                              <String fx:value="DisabledInvisible" />
                           </styleClass>
                        </Button>
                     </children>
                  </HBox>
                  <ListView fx:id="keywordView" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="7" GridPane.vgrow="SOMETIMES" />
                  <Label styleClass="smallText" text="Start:" GridPane.columnSpan="2" GridPane.rowIndex="8" GridPane.valignment="BOTTOM" />
                  <FlowPane fx:id="startPane" alignment="CENTER_LEFT" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="9">
                     <children>
                        <Button fx:id="moreStart" alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" onAction="#toggleStartExpanded" styleClass="tinyButton" text="more..." textAlignment="CENTER">
                           <FlowPane.margin>
                              <Insets left="7.0" top="18.0" />
                           </FlowPane.margin>
                        </Button>
                     </children>
                  </FlowPane>
                  <HBox alignment="BOTTOM_LEFT" spacing="5.0" GridPane.rowIndex="10" GridPane.valignment="BOTTOM">
                     <children>
                        <Label contentDisplay="RIGHT" styleClass="smallText" text="End" />
                     </children>
                  </HBox>
                  <FlowPane fx:id="endPane" alignment="CENTER_LEFT" hgap="5.0" GridPane.columnSpan="2" GridPane.rowIndex="11">
                     <children>
                        <Button fx:id="moreEnd" alignment="CENTER" ellipsisString="" maxWidth="50.0" minWidth="60.0" mnemonicParsing="false" onAction="#toggleEndExpanded" styleClass="tinyButton" text="more..." textAlignment="CENTER">
                           <FlowPane.margin>
                              <Insets left="7.0" top="18.0" />
                           </FlowPane.margin>
                        </Button>
                     </children>
                  </FlowPane>
                  <Label styleClass="smallText" text="Time Unit" GridPane.rowIndex="12" />
                  <Text fx:id="errorMessage" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="smallText" GridPane.columnSpan="2" GridPane.rowIndex="13" />
                  <ComboBox fx:id="timeInput" nodeOrientation="LEFT_TO_RIGHT" prefWidth="150.0" GridPane.rowIndex="13" />
               </children>
            </GridPane>
            <HBox fx:id="ratingBox">
               <children>
                  <Polygon fill="YELLOW" stroke="BLACK" strokeType="INSIDE">
                    <points>
                      <Double fx:value="-50.0" />
                      <Double fx:value="40.0" />
                      <Double fx:value="50.0" />
                      <Double fx:value="40.0" />
                      <Double fx:value="0.0" />
                      <Double fx:value="-60.0" />
                    </points>
                  </Polygon>
                  <Polygon fill="YELLOW" stroke="BLACK" strokeType="INSIDE">
                     <points>
                        <Double fx:value="-50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="-60.0" />
                     </points>
                  </Polygon>
                  <Polygon fill="YELLOW" stroke="BLACK" strokeType="INSIDE">
                     <points>
                        <Double fx:value="-50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="-60.0" />
                     </points>
                  </Polygon>
                  <Polygon fill="YELLOW" stroke="BLACK" strokeType="INSIDE">
                     <points>
                        <Double fx:value="-50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="-60.0" />
                     </points>
                  </Polygon>
                  <Polygon fill="YELLOW" stroke="BLACK" strokeType="INSIDE">
                     <points>
                        <Double fx:value="-50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="50.0" />
                        <Double fx:value="40.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="-60.0" />
                     </points>
                  </Polygon>
               </children>
            </HBox>
            <Region prefHeight="1.0" />
            <GridPane fx:id="controlButtons" hgap="5.0" vgap="5.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Button fx:id="saveEditButton" alignment="CENTER" maxHeight="30" onAction="#saveEditButton" text="Edit" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <styleClass>
                        <String fx:value="smallButton" />
                        <String fx:value="DisabledInvisible" />
                     </styleClass></Button>
                  <Button fx:id="deleteButton" alignment="CENTER" maxHeight="30" onAction="#deleteTimeline" text="Delete" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <styleClass>
                        <String fx:value="smallButton" />
                        <String fx:value="DisabledInvisible" />
                     </styleClass></Button>
               </children>
            </GridPane>
         </children>
      </VBox>
   </children>
</HBox>
