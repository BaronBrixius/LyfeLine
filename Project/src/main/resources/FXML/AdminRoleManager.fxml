<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" prefHeight="452.0" prefWidth="670.0" stylesheets="@../styles/DefaultStyle.css"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controllers.AdminRoleManager">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="180.0" minHeight="10.0" prefHeight="174.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="155.0" minHeight="10.0" prefHeight="112.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <VBox alignment="CENTER" prefHeight="409.0" prefWidth="334.0" spacing="5.0" GridPane.columnIndex="1"
          GridPane.hgrow="ALWAYS" GridPane.rowSpan="3" GridPane.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <ComboBox fx:id="sortBy" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="328.0"
                  promptText="Sort by"/>
        <TextField prefWidth="440.0" promptText="Search here.." VBox.vgrow="SOMETIMES"/>
        <ListView fx:id="listView" nodeOrientation="LEFT_TO_RIGHT" prefHeight="324.0" prefWidth="290.0"/>
    </VBox>
    <VBox alignment="CENTER" prefHeight="216.0" prefWidth="290.0" spacing="5.0" GridPane.halignment="CENTER"
          GridPane.hgrow="ALWAYS" GridPane.rowSpan="3" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <HBox prefHeight="50.0" prefWidth="270.0">
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="User: "/>
            <Text fx:id="userText" strokeType="OUTSIDE" strokeWidth="0.0" text="Ben@gmail.com"/>
        </HBox>
        <HBox prefHeight="57.0" prefWidth="270.0">
            <CheckBox fx:id="toggle" mnemonicParsing="false" onAction="#toggleClicked" styleClass="mediumText"
                      text="Admin"/>
        </HBox>
        <Region prefHeight="212.0" prefWidth="305.0" VBox.vgrow="SOMETIMES"/>
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#back" styleClass="smallButton" text="back"
                VBox.vgrow="SOMETIMES"/>
    </VBox>
</GridPane>
