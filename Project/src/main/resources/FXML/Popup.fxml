<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="150" spacing="35.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Popup">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
   <Text strokeType="OUTSIDE" fx:id="timelineDeletionText" strokeWidth="0.0"
         text="Are you sure you want to delete XXX ?"/>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="75.0">
      <Button mnemonicParsing="false" onAction="#deleteConfirm" text="Confirm">
         <styleClass>
            <String fx:value="popupButton"/>
            <String fx:value="hoverRed"/>
         </styleClass>
      </Button>
      <Button mnemonicParsing="false" onAction="#close" styleClass="popupButton" text="Cancel"/>
   </HBox>
   <Text fx:id="displayTxt" strokeType="OUTSIDE" strokeWidth="0.0" text="it didn't work"/>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="75.0">
      <Button fx:id="btnConfirm" mnemonicParsing="false" onAction="#confirm" text="Confirm">
         <styleClass>
            <String fx:value="popupButton"/>
            <String fx:value="hoverRed"/>
         </styleClass>
      </Button>
      <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#close" styleClass="popupButton" text="Cancel"/>
   </HBox>
</VBox>
